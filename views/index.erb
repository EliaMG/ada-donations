    <form action="/charge" method="POST" role='form' class="form-horizontal" id="payment-form">
      <div class="form-group">
        <label class="col-lg-2 sr-only">Amount:</label>
        <div class='col-lg-11'>
          <input type="text" size="10" placeholder="$ Donation Amount" class='cust-amount form-control input-lg' name="customer_amount" value=""/>
        </div>
      </div>

        <label>You</label>
        <div class="form-group">
          <label class="sr-only">Name:</label>
          <div class='col-lg-6'>
            <input type="text" size="25" placeholder="Name" class='cust-name form-control input-sm' name="customer_name" value="" />
            <small class="help-block">Leave blank to remain anonymous</small>
          </div>
          <label class="sr-only">Email:</label>
          <div class='col-lg-6'>
            <input type="text" size="20" placeholder="Email" data-validate="true" class='cust-email form-control input-sm' value="" name="customer_email"/>
          </div>
        </div>
        <label class='credit-card'>Credit Card <i class="text-success card-type-icon fa"></i></label>
        <div class="form-group">

          <div class='col-lg-8'>
            <input type="text" size="20" placeholder="Card Number" class='card-number form-control input-sm' name="card[number]" value=""/>
            <input type="hidden" class='card-type' name="card[type]" value=""/>
          </div>
          <label class="sr-only">CVC:</label>
          <div class='col-lg-4'>
            <input type="text" size="4" placeholder="Security Code" class='card-cvc form-control input-sm' value="" name=card[cvc] data-stripe="cvc"/>
          </div>
        </div>


        <div class="form-group">
          <label class='sr-only'>Expiration:</label>
          <div class='col-sm-6'>
            <input type="text" size="2" placeholder="MM" class='card-expiry-month form-control col-lg-4 input-sm' name=card[month] value=""/>
          </div>
          <div class='col-sm-6'>
            <input type="text" size="4" placeholder="YYYY" class='card-expiry-year form-control col-lg-4 input-sm' name=card[year] value=""/>
          </div>
        </div>

      <button class='btn btn-primary btn-lg btn-block submit-donation' type="submit" disabled="disabled">Submit Donation</button>

    </form>
  </div>
